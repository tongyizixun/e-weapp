<demo-block title="mini按钮">
    <e-button style="margin-left:16px" bind:click="handleClick" type="primary" size="mini">
        按钮
    </e-button>
    <e-button style="margin-left:16px" bind:click="handleClick" type="default" size="mini">
        按钮
    </e-button>
    <e-button style="margin-left:16px" bind:click="handleClick" type="warning" size="mini">
        按钮
    </e-button>
    <e-button style="margin-left:16px" bind:click="handleClick" type="info" size="mini">
        按钮
    </e-button>
    <e-button style="margin-left:16px" bind:click="handleClick" type="success" size="mini">
        按钮
    </e-button>
</demo-block>
<demo-block title="默认尺寸">
    <e-button bind:click="handleClick" type="primary">默认</e-button>
</demo-block>
<demo-block title="加载状态">
    <e-button bind:click="handleClick" type="primary" loading="true">加载中按钮</e-button>
</demo-block>
<demo-block title="禁用状态">
    <e-button bind:click="handleClick" type="primary" plain="{{true}}" disabled>禁用按钮</e-button>
</demo-block>
<demo-block title="大尺寸">
    <e-button bind:click="handleClick" type="primary" size="large">按钮</e-button>
</demo-block>